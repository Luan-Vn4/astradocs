{
	"name": "astradocs-monorepo",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"cli": "bun run --cwd packages/cli",
		"typecheck": "tsc --noEmit",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write ."
	},
	"devDependencies": {
		"@biomejs/biome": "latest"
	}
}
